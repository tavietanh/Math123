<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundbaitap"
    tools:context=".TapdemActivity">

    <TextView
        android:id="@+id/txtQuestionToanHinh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="93dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="100dp"
        android:text="Có bao nhiêu con?"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNextTapdem"
        android:layout_width="168dp"
        android:layout_height="89dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_next"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTapdem"
        app:layout_constraintVertical_bias="0.535" />

    <TextView
        android:id="@+id/pointTapdem"
        android:layout_width="126dp"
        android:layout_height="41dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:background="@drawable/diem"
        android:freezesText="false"
        android:text=" 0"
        android:textColor="@android:color/holo_orange_dark"
        android:textDirection="firstStrongLtr"
        android:textIsSelectable="false"
        android:textSize="25sp"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/countTapdem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/countTapdem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:autoText="false"
        android:background="@drawable/cau"
        android:text="Câu 1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pointTapdem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <ImageView
        android:id="@+id/imageTapdem"
        android:layout_width="290dp"
        android:layout_height="181dp"
        android:layout_marginBottom="250dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        app:srcCompat="@drawable/ani_1" />

    <Button
        android:id="@+id/btnTapdemC"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:layout_marginBottom="135dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="157dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTapdemD"
        app:layout_constraintStart_toEndOf="@+id/btnTapdemB"
        app:layout_constraintTop_toBottomOf="@+id/imageTapdem" />

    <Button
        android:id="@+id/btnTapdemD"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:layout_marginBottom="135dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="157dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTapdemC"
        app:layout_constraintTop_toBottomOf="@+id/imageTapdem" />

    <Button
        android:id="@+id/btnTapdemB"
        android:layout_width="70dp"
        android:layout_height="54dp"
        android:layout_marginBottom="135dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="157dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTapdemC"
        app:layout_constraintStart_toEndOf="@+id/btnTapdemA"
        app:layout_constraintTop_toBottomOf="@+id/imageTapdem" />

    <Button
        android:id="@+id/btnTapdemA"
        android:layout_width="70dp"
        android:layout_height="53dp"
        android:layout_marginBottom="135dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="157dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="1"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTapdemB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTapdem" />

</android.support.constraint.ConstraintLayout>