<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinhnhamActivity"
    android:background="@drawable/backgroundbaitap">

    <TextView
        android:id="@+id/numbera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="130dp"
        android:text="@string/TinhNham_numberA"
        android:textColor="#FFFFFF"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDapAnA"
        app:layout_constraintEnd_toStartOf="@+id/SignView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:text="@string/TinhNham_numberB"
        android:textColor="#FFFFFF"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDapAnD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SignView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SignView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="90sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/numberb"
        app:layout_constraintStart_toEndOf="@+id/numbera"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDapAnA"
        android:layout_width="173dp"
        android:layout_height="122dp"
        android:layout_marginBottom="126dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/backgrounddapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnA"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDapAnB"
        app:layout_constraintTop_toBottomOf="@+id/numbera"
        app:layout_constraintVertical_bias="0.781" />

    <Button
        android:id="@+id/btnDapAnB"
        android:layout_width="173dp"
        android:layout_height="122dp"
        android:layout_marginBottom="126dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/backgrounddapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnB"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDapAnC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnDapAnA"
        app:layout_constraintTop_toBottomOf="@+id/numbera"
        app:layout_constraintVertical_bias="0.62" />

    <Button
        android:id="@+id/btnDapAnC"
        android:layout_width="173dp"
        android:layout_height="122dp"
        android:layout_marginBottom="126dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/backgrounddapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnC"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDapAnD"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnDapAnB"
        app:layout_constraintTop_toBottomOf="@+id/numberb"
        app:layout_constraintVertical_bias="0.612" />

    <Button
        android:id="@+id/btnDapAnD"
        android:layout_width="173dp"
        android:layout_height="122dp"
        android:layout_marginBottom="126dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/backgrounddapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnD"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDapAnC"
        app:layout_constraintTop_toBottomOf="@+id/numberb"
        app:layout_constraintVertical_bias="0.781" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/homeicon"
        android:onClick="onButtonClick"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/DiemSo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/Diem"
        android:paddingLeft="35dp"
        android:paddingTop="35dp"
        android:text="@string/DiemSo"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/countView"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:background="@drawable/cau"
        android:paddingLeft="60dp"
        android:paddingTop="40dp"
        android:text="@string/Cau"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="25dp"
        android:text="@string/btn_Next"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDapAnD"
        app:layout_constraintVertical_bias="0.791" />
</android.support.constraint.ConstraintLayout>