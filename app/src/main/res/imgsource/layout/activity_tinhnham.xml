<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinhnhamActivity"
    android:background="@drawable/backgroundbaitap">

    <TextView
        android:id="@+id/numbera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:text="@string/TinhNham_numberA"
        android:textColor="#FFFFFF"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/SignView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHome" />

    <TextView
        android:id="@+id/numberb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="63dp"
        android:text="@string/TinhNham_numberB"
        android:textColor="#FFFFFF"
        android:textSize="120sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SignView"
        app:layout_constraintTop_toBottomOf="@+id/countView" />

    <Button
        android:id="@+id/btnDapAnA"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnA"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/DiemSo"
        app:layout_constraintEnd_toStartOf="@+id/btnDapAnB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbera" />

    <Button
        android:id="@+id/btnDapAnB"
        android:layout_width="74dp"
        android:layout_height="63dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnB"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/DiemSo"
        app:layout_constraintEnd_toStartOf="@+id/btnDapAnC"
        app:layout_constraintStart_toEndOf="@+id/btnDapAnA"
        app:layout_constraintTop_toBottomOf="@+id/numbera" />

    <Button
        android:id="@+id/btnDapAnC"
        android:layout_width="74dp"
        android:layout_height="63dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnC"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintEnd_toStartOf="@+id/btnDapAnD"
        app:layout_constraintStart_toEndOf="@+id/btnDapAnB"
        app:layout_constraintTop_toBottomOf="@+id/numberb" />

    <Button
        android:id="@+id/btnDapAnD"
        android:layout_width="77dp"
        android:layout_height="61dp"
        android:layout_marginBottom="82dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/button_dapan"
        android:onClick="onButtonClick"
        android:text="@string/DapAnD"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDapAnC"
        app:layout_constraintTop_toBottomOf="@+id/numberb" />

    <Button
        android:id="@+id/btnHome"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/homeicon"
        android:onClick="onButtonClick"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/DiemSo"
        android:layout_width="202dp"
        android:layout_height="133dp"
        android:background="@drawable/diem"
        android:paddingLeft="35dp"
        android:paddingTop="35dp"
        android:text="@string/DiemSo"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        tools:layout_editor_absoluteY="434dp" />

    <TextView
        android:id="@+id/countView"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:background="@drawable/cau"
        android:paddingLeft="60dp"
        android:paddingTop="40dp"
        android:text="@string/Cau"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="130dp" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_Next"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="490dp" />

    <TextView
        android:id="@+id/SignView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="87dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="94dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="90sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDapAnC"
        app:layout_constraintEnd_toStartOf="@+id/numberb"
        app:layout_constraintStart_toEndOf="@+id/numbera"
        app:layout_constraintTop_toBottomOf="@+id/countView"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>