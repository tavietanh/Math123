<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="67dp"
    tools:layout_editor_absoluteY="158dp"
    >
    <TextView
        android:id="@+id/textResultdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_wood"
        android:text="Đúng rồi + 10 điểm"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/imageDialog"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textResultdialog"
        app:srcCompat="@drawable/simba_sad" />

    <Button
        android:id="@+id/btnDialog"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageDialog"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_main"
        android:baselineAligned="false"
        android:text="Tiếp tục"
        android:textColor="@color/colorBrown" />

</RelativeLayout>
